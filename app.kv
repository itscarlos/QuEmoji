<MainScreen>:
    name: "main"
    #MyWidget
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'img/emo.jpg'
                size: self.size
    BoxLayout:
        Button:
            text: 'Grupos de Musica'
            size_hint: 0.5, 0.2
            #height: '48dp'
            on_release: app.root.current = "c1"
            #border: 30,30,30,30
            opacity: 1 if self.state == 'normal' else .5
        Button:
            text: 'Libros'
            size_hint: 0.5, 0.2 
            #height: '48dp'
            on_release: app.root.current = "b1"
            #border: 10,10,10,10
            opacity: 1 if self.state == 'normal' else .5
        Button:
            text: 'Peliculas'
            size_hint: 0.5, 0.2
            #height: '48dp'
            on_release: app.root.current = "a1"
            #border: 30,30,30,30
            opacity: 1 if self.state == 'normal' else .5
